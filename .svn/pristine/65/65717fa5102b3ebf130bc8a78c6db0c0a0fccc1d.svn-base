#ifndef FALCONVIEW_CAMERAMODES_H_
#define FALCONVIEW_CAMERAMODES_H_

// The following enumeration defines the various camera modes that are used by
// the 3D renderer. NONE is used when requesting the camera mode from the 2D
// rendering engine
//
namespace fvw
{
enum CameraMode
{
   CAMERA_MODE_NONE,
   CAMERA_MODE_FLIGHT,
   CAMERA_MODE_PAN,
   CAMERA_MODE_GROUND_VIEW
};
}

#endif  // FALCONVIEW_CAMERAMODES_H_
